
@{
    ViewData["Titulo"] = "Registrar Cargo";
    var mensajeExito = ViewBag.MensajeExito as string;
    var mensajeError = ViewBag.MensajeError as string;
}

@model ProyectoFinal3GestionEmpleado.Models.Cargo

<title>@ViewData["Titulo"]</title>

<main class="container mt-4 animate__animated animate__fadeIn">
    <h3 class="mb-4"><i class="bi bi-plus-circle text-primary"></i> Registrar Cargo</h3>

    @if (!string.IsNullOrEmpty(mensajeExito))
    {
        <div class="alert alert-success text-center my-3 w-75 mx-auto">
            @mensajeExito
        </div>
    }
    @if (!string.IsNullOrEmpty(mensajeError))
    {
        <div class="alert alert-danger text-center my-3 w-75 mx-auto">
            @mensajeError
        </div>
    }

    <form asp-action="Registrar" method="post">
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label">Cargo</label>
            <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

         <div class="d-flex gap-3 align-items-center">
            <button type="submit" class="btn btn-secondary btn-sm"><i class="bi bi-save"></i> Guardar</button>
            <a asp-action="Index" class="btn btn-danger btn-sm">Cancelar</a>
         </div>
    </form>
</main>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}